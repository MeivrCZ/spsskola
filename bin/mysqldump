#!/bin/bash

cd "$(dirname "$(which "$0")")/.."
tflag=""
test -t 0 || tflag="-T"

host=db
user=root
password=rootpass
database=thedatabase

bin/docker compose exec $tflag db bash -c "
    mysqldump -h $host -u $user -p$password $database --complete-insert --no-create-info --ignore-table=\"$database.doctrine_migration_versions\" 2> /dev/null
"
